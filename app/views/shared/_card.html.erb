<div class="field card bg-main-color">
  <div class="row">
    <div class="col-2">
      <span class="material-icons"><%= locals[:icon] %></span>
    </div>
    <div class="col-10">
      <div class="card-body">
        <h4 class="card-title">
          <%= t(locals[:title]) %>
        </h4>
        <p class="card-text">
          <%= t(locals[:desc]) %>
        </p>
      </div>
      <button class="btn-primary">Adicionar</button>
      <button class="btn-primary">Remover</button>
    </div>
  </div>
</div>

