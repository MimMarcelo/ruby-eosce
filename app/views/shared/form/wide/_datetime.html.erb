<div class="field card mb-4">
    <div class="row no-gutters">
        <div class="col-2 text-center">
        <span class="material-icons"><%= icon %></span>
        </div>
        <div class="col-10">
        <div class="card-body">
            <%= form.label field, t(label), class: 'card-title' %>
            <div class="d-md-flex align-bottom">
                <%= form.datetime_select field, {}, { :class => "form-control m-md-3" } %>
            </div>
        </div>
        </div>
    </div>
</div>