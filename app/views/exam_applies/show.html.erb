<p id="notice"><%= notice %></p>

<h2><%= @schedule.name %></h2>
<p>
  Aluno: <%= @exam_apply.student_name %>
</p>
<div class="row">
  <% quebra_linha = 0 %>
  <% fixed_order = @schedule.fixed_station_sequence %>

  <% @schedule.station_templates.each_with_index do |station, i| %>
    <%
    habilitado = true
    if (fixed_order && @exam_apply.station_turn!=i) then
      habilitado = false
    end
    %>
    <div class="field card col-md m-2<%= !habilitado ? ' disabled': '' %>">
      <div class="row">
        <div class="col-2">
          <span class="material-icons">class</span>
        </div>
        <div class="col-7">
          <div class="card-body">
            <h4 class="card-title">
              <%= station.name %>
            </h4>
            <p class="card-text">
              <%= station.resume %>
            </p>
          </div>
        </div>
        <div class="col-3 pt-4">
          <% if(habilitado) then%>
            <%= link_to t('begin'), station,
              class: 'btn btn-primary mt-5 align-bottom' %>
          <% end %>
        </div>
      </div>
    </div>
    <% quebra_linha+= 1 %>
    <% if(quebra_linha%2 == 0) then %>
      <div class="w-100"></div>
    <% end %>
  <% end %>
</div>

<%# link_to 'Edit', edit_exam_apply_path(@exam_apply) %>
<%# link_to 'Back', exam_applies_path %>
